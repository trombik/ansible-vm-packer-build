{
  "builders": [{
    "type": "qemu",
    "iso_url": "{{user `mirror`}}/6.8/amd64/install68.iso",
    "iso_checksum": "{{user `iso_checksum_type`}}:{{user `iso_checksum`}}",
    "output_directory": "output-openbsd-6.8-amd64-{{build_type}}",
    "vm_name": "packer-openbsd-6.8-amd64",
    "disk_size": "{{user `disk_size`}}",
    "headless": "{{user `headless`}}",
    "http_directory": "http",
    "boot_wait": "30s",
    "boot_command": [
      "S<enter><wait>",
      "dhclient vio0<enter><wait>",
      "ftp -o install.conf http://{{.HTTPIP}}:{{.HTTPPort}}/openbsd-6.8/install.conf<enter><wait>",
      "ftp -o install.sh http://{{.HTTPIP}}:{{.HTTPPort}}/openbsd-6.8/install.sh<enter><wait>",
      "ftp -o install-chroot.sh http://{{.HTTPIP}}:{{.HTTPPort}}/openbsd-6.8/install-chroot.sh<enter><wait>",
      "ftp -o disklabel.conf http://{{.HTTPIP}}:{{.HTTPPort}}/openbsd/disklabel.conf<enter><wait>",
      "sh install.sh < install-chroot.sh && reboot<enter>"
    ],
    "ssh_timeout": "{{user `ssh_timeout`}}",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "shutdown_command": "sudo shutdown -h -p now",
    "qemuargs": [
      ["-m", "{{user `memory`}}"],
      ["-smp", "{{user `cpus`}}"]
    ]
  }, {
    "type": "virtualbox-iso",
    "guest_os_type": "OpenBSD_64",
    "iso_url": "{{user `mirror`}}/6.8/amd64/install68.iso",
    "iso_checksum": "{{user `iso_checksum_type`}}:{{user `iso_checksum`}}",
    "output_directory": "output-openbsd-6.8-amd64-{{build_type}}",
    "vm_name": "packer-openbsd-6.8-amd64",
    "hard_drive_interface": "scsi",
    "disk_size": "{{user `disk_size`}}",
    "headless": "{{user `headless`}}",
    "http_directory": "http",
    "boot_wait": "20s",
    "boot_command": [
      "S<enter><wait>",
      "dhclient em0<enter><wait>",
      "ftp -o install.conf http://{{.HTTPIP}}:{{.HTTPPort}}/openbsd-6.8/install.conf<enter><wait>",
      "ftp -o install.sh http://{{.HTTPIP}}:{{.HTTPPort}}/openbsd-6.8/install.sh<enter><wait>",
      "ftp -o install-chroot.sh http://{{.HTTPIP}}:{{.HTTPPort}}/openbsd-6.8/install-chroot.sh<enter><wait>",
      "ftp -o disklabel.conf http://{{.HTTPIP}}:{{.HTTPPort}}/openbsd/disklabel.conf<enter><wait>",
      "sh install.sh < install-chroot.sh && reboot<enter>"
    ],
    "ssh_timeout": "{{user `ssh_timeout`}}",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "guest_additions_mode": "disable",
    "shutdown_command": "sudo shutdown -h -p now",
    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
      ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"]
    ],
    "post_shutdown_delay": "30s"
  }, {
    "type": "vmware-iso",
    "guest_os_type": "freebsd-64",
    "iso_url": "{{user `mirror`}}/6.8/amd64/install68.iso",
    "iso_checksum": "{{user `iso_checksum_type`}}:{{user `iso_checksum`}}",
    "output_directory": "output-openbsd-6.8-amd64-{{build_type}}",
    "vm_name": "packer-openbsd-6.8-amd64",
    "disk_size": "{{user `disk_size`}}",
    "headless": "{{user `headless`}}",
    "http_directory": "http",
    "boot_wait": "20s",
    "boot_command": [
      "S<enter><wait>",
      "dhclient em0<enter><wait>",
      "ftp -o install.conf http://{{.HTTPIP}}:{{.HTTPPort}}/openbsd-6.8/install.conf<enter><wait>",
      "ftp -o install.sh http://{{.HTTPIP}}:{{.HTTPPort}}/openbsd-6.8/install.sh<enter><wait>",
      "ftp -o install-chroot.sh http://{{.HTTPIP}}:{{.HTTPPort}}/openbsd-6.8/install-chroot.sh<enter><wait>",
      "ftp -o disklabel.conf http://{{.HTTPIP}}:{{.HTTPPort}}/openbsd/disklabel.conf<enter><wait>",
      "sh install.sh < install-chroot.sh && reboot<enter>"
    ],
    "ssh_timeout": "{{user `ssh_timeout`}}",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "shutdown_command": "sudo shutdown -h -p now",
    "vmx_data": {
      "memsize": "{{user `memory`}}",
      "numvcpus": "{{user `cpus`}}"
    }
  }],
  "provisioners": [{
    "type": "shell",
    "scripts": [
      "scripts/openbsd/init.sh",
      "scripts/common/vagrant.sh",
      "scripts/common/sshd.sh",
      "scripts/openbsd/minimize.sh"
    ]
  }],
  "post-processors": [{
    "type": "vagrant",
    "compression_level": "{{user `compression_level`}}",
    "output": "openbsd-6.8-amd64-{{.Provider}}.box",
    "vagrantfile_template": "vagrantfile_templates/openbsd.rb"
  }],
  "variables": {
    "compression_level": "6",
    "cpus": "2",
    "disk_size": "40000",
    "headless": "true",
    "iso_checksum": "47e291fcc2d0c1a8ae0b66329f040b33af755b6adbd21739e20bb5ad56f62b6c",
    "iso_checksum_type": "sha256",
    "memory": "512",
    "mirror": "http://cdn.openbsd.org/pub/OpenBSD",
    "ssh_timeout": "60m"
  }
}
