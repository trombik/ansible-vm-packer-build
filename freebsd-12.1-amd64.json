{
  "builders": [
    {
      "boot_command": [
        "2<enter><wait10><wait10><wait10>",
        "<enter><wait>",
        "mdmfs -s 100m md1 /tmp<enter><wait>",
        "dhclient -l /tmp/dhclient.leases -p /tmp/dhclient.pid vtnet0<enter><wait5>",
        "fetch -o /tmp/installerconfig http://{{.HTTPIP}}:{{.HTTPPort}}/freebsd-12.1/installerconfig<enter><wait>",
        "bsdinstall script /tmp/installerconfig \u0026\u0026 reboot<enter>"
      ],
      "boot_wait": "5s",
      "disk_size": "{{user `disk_size`}}",
      "headless": "{{user `headless`}}",
      "http_directory": "http",
      "iso_checksum": "{{user `iso_checksum_type`}}:{{user `iso_checksum`}}",
      "iso_url": "{{user `mirror`}}/releases/ISO-IMAGES/12.1/FreeBSD-12.1-RELEASE-amd64-disc1.iso",
      "output_directory": "output-freebsd-12.1-amd64-{{build_type}}",
      "qemuargs": [
        [
          "-m",
          "{{user `memory`}}"
        ],
        [
          "-display",
          "none"
        ],
        [
          "-smp",
          "{{user `cpus`}}"
        ]
      ],
      "shutdown_command": "sudo poweroff",
      "ssh_password": "vagrant",
      "ssh_timeout": "{{user `ssh_timeout`}}",
      "ssh_username": "vagrant",
      "type": "qemu",
      "vm_name": "packer-freebsd-12.1-amd64"
    },
    {
      "boot_command": [
        "2<enter><wait10><wait10><wait10>",
        "<enter><wait>",
        "mdmfs -s 100m md1 /tmp<enter><wait>",
        "dhclient -l /tmp/dhclient.leases -p /tmp/dhclient.pid em0<enter><wait5>",
        "fetch -o /tmp/installerconfig http://{{.HTTPIP}}:{{.HTTPPort}}/freebsd-12.1/installerconfig<enter><wait>",
        "bsdinstall script /tmp/installerconfig \u0026\u0026 reboot<enter>"
      ],
      "boot_wait": "10s",
      "disk_size": "{{user `disk_size`}}",
      "guest_additions_mode": "disable",
      "guest_os_type": "FreeBSD_64",
      "hard_drive_interface": "ide",
      "headless": "{{user `headless`}}",
      "http_directory": "http",
      "iso_checksum": "{{user `iso_checksum_type`}}:{{user `iso_checksum`}}",
      "iso_url": "{{user `mirror`}}/releases/ISO-IMAGES/12.1/FreeBSD-12.1-RELEASE-amd64-disc1.iso",
      "output_directory": "output-freebsd-12.1-amd64-{{build_type}}",
      "post_shutdown_delay": "30s",
      "shutdown_command": "sudo poweroff",
      "ssh_password": "vagrant",
      "ssh_timeout": "{{user `ssh_timeout`}}",
      "ssh_username": "vagrant",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "{{user `memory`}}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "{{user `cpus`}}"
        ]
      ],
      "vm_name": "packer-freebsd-12.1-amd64"
    },
    {
      "boot_command": [
        "2<enter><wait10><wait10><wait10>",
        "<enter><wait>",
        "mdmfs -s 100m md1 /tmp<enter><wait>",
        "dhclient -l /tmp/dhclient.leases -p /tmp/dhclient.pid em0<enter><wait5>",
        "fetch -o /tmp/installerconfig http://{{.HTTPIP}}:{{.HTTPPort}}/freebsd-12.1/installerconfig<enter><wait>",
        "bsdinstall script /tmp/installerconfig \u0026\u0026 reboot<enter>"
      ],
      "boot_wait": "10s",
      "disk_size": "{{user `disk_size`}}",
      "guest_os_type": "freeBSD-64",
      "headless": "{{user `headless`}}",
      "http_directory": "http",
      "iso_checksum": "{{user `iso_checksum_type`}}:{{user `iso_checksum`}}",
      "iso_url": "{{user `mirror`}}/releases/ISO-IMAGES/12.1/FreeBSD-12.1-RELEASE-amd64-disc1.iso",
      "output_directory": "output-freebsd-12.1-amd64-{{build_type}}",
      "shutdown_command": "sudo poweroff",
      "ssh_password": "vagrant",
      "ssh_timeout": "{{user `ssh_timeout`}}",
      "ssh_username": "vagrant",
      "tools_upload_flavor": "freebsd",
      "type": "vmware-iso",
      "vm_name": "packer-freebsd-12.1-amd64",
      "vmx_data": {
        "memsize": "{{user `memory`}}",
        "numvcpus": "{{user `cpus`}}"
      }
    }
  ],
  "post-processors": [
    {
      "compression_level": "{{user `compression_level`}}",
      "output": "freebsd-12.1-amd64-{{.Provider}}.box",
      "type": "vagrant",
      "vagrantfile_template": "vagrantfile_templates/freebsd.rb"
    }
  ],
  "provisioners": [
    {
      "scripts": [
        "scripts/freebsd/virtualbox.sh",
        "scripts/freebsd/vmware.sh",
        "scripts/freebsd/init.sh",
        "scripts/common/vagrant.sh",
        "scripts/common/sshd.sh",
        "scripts/freebsd/cleanup.sh",
        "scripts/freebsd/minimize.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "compression_level": "6",
    "cpus": "1",
    "disk_size": "40000",
    "headless": "true",
    "iso_checksum": "aa9d34b458826486999ed3e872436b6712ae38cede5ea41de4ab923e3419d461",
    "iso_checksum_type": "sha256",
    "memory": "512",
    "mirror": "https://download.freebsd.org/ftp",
    "ssh_timeout": "60m"
  }
}

