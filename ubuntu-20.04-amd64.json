{
  "builders": [
    {
      "boot_command": [
        "<enter><enter><f6><esc><wait> ",
        "autoinstall ds=nocloud-net;s=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ubuntu-20.04/",
        "<enter>"
      ],
      "boot_wait": "5s",
      "disk_size": "{{user `disk_size`}}",
      "guest_os_type": "Ubuntu_64",
      "headless": "false",
      "http_directory": "http",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_url": "{{user `mirror`}}/20.04/ubuntu-20.04.2-live-server-amd64.iso",
      "output_directory": "output-ubuntu-20.04-amd64-{{build_type}}",
      "shutdown_command": "sudo systemctl poweroff",
      "ssh_handshake_attempts": "200",
      "ssh_password": "vagrant",
      "ssh_timeout": "{{user `ssh_timeout`}}",
      "ssh_username": "vagrant",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "{{user `memory`}}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "{{user `cpus`}}"
        ]
      ],
      "vm_name": "packer-ubuntu-20.04-amd64"
    }
  ],
  "post-processors": [
    {
      "compression_level": "{{user `compression_level`}}",
      "output": "ubuntu-20.04-amd64-{{.Provider}}.box",
      "type": "vagrant"
    }
  ],
  "provisioners": [
    {
      "scripts": [
        "scripts/ubuntu/apt.sh",
        "scripts/ubuntu/virtualbox.sh",
        "scripts/ubuntu/vmware.sh",
        "scripts/common/vagrant.sh",
        "scripts/common/sshd.sh",
        "scripts/ubuntu/cleanup.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "compression_level": "6",
    "cpus": "1",
    "disk_size": "40000",
    "iso_checksum": "443511f6bf12402c12503733059269a2e10dec602916c0a75263e5d990f6bb93",
    "memory": "1024",
    "mirror": "http://releases.ubuntu.com",
    "ssh_timeout": "60m"
  }
}
